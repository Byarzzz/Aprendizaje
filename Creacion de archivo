#include "Alumno.h"
#include <iostream>
using namespace std;

int main() {
  Alumno a1[3];
  string n;
  for (int i = 0; i < 3; i++) {
    cout << "Ingrese el nombre: ";
    cin >> n;
    a1[i].setAsignar(n);
  }
  for (int i = 0; i < 3; i++) {
    a1[i].getMostrar();
  }
  for (int i = 0; i < 3; i++) {
    a1[i].getPromedio();
  }
  return 0;
}
