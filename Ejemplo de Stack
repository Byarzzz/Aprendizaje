//Ejemplo 2

//Mostrar Pila Invertida
#include <iostream>
#include<stack>
using namespace std;
//Uso de funciones externas sobre un stack
void Mostrar(stack<int> S)
{ stack<int> AUX;
int e;
cout <<"Mostrar todos los elementos del Stack S" << endl;
while(!S.empty())
{
e = S.top();
cout <<"Valor = " << e << endl;
AUX.push(e);
S.pop();
}
cout<<"Mostrar todos los elementos del Stack AUX"<<endl;
while(!AUX.empty())
{
e = AUX.top();
cout <<"Valor = " << e << endl;
AUX.pop();
}

}

int main()
{ int dato,num;
stack<int> S;
cout <<"Ingrese cantidad de elementos : ";
cin >> num;
for(int i=0; i<num; i++)
{
cout <<"Ingrese elemento : ";
cin >> dato;
S.push(dato);
}
Mostrar(S);
return 0;
}
